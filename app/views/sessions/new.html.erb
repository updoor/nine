<% content_for(:add_stylesheet) do -%>
<%= stylesheet_link_tag('app/sessions/new') %>
<% end -%>

<div id="login_form">
<% form_tag session_path do -%>
<table>
  <tr>
    <th><label for="login">Login</label></th>
    <td><%= text_field_tag 'login_id' %></td>
  </tr>
  <tr>
    <th><label for="password">Password</label></th>
    <td><%= password_field_tag 'password' %></td>
  </tr>
  <tr>
    <td colspan="2" class="submit_area"><%= image_submit_tag('app/sessions/btn_login.gif') %></td>
  </tr>
</table>

<!-- Uncomment this if you want this functionality
<p><label for="remember_me">Remember me:</label>
<%= check_box_tag 'remember_me' %></p>
-->

<% end -%>

<div id="signup">
  <%= link_to('新規ユーザ登録', url_for('/signup'), {:class => 'signup_trigger'}) %>
</div>

</div>

